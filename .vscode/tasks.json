{
    "version": "2.0.0",
    "type": "shell",
    "command": "${command:python.interpreterPath}",
    "problemMatcher": [],
    "tasks": [
        {
            "label": "set up dev environment",
            "args": [
                "scripts/set_up_dev_environment.py"
            ],
        },
        {
            "label": "create 3.7 venv macrobond_data_api_python_env",
            "command": "py -3.7 -m venv macrobond_data_api_python_env"
        },
        {
            "label": "create 3 venv macrobond_data_api_python_env",
            "command": "py -3 -m venv macrobond_data_api_python_env"
        },
        {
            "label": "pytest",
            "args": [
                "scripts/pytest_.py"
            ],
        },
        {
            "label": "pylint",
            "args": [
                "scripts/pylint.py"
            ],
            "presentation": {
                "clear": true
            },
        },
        {
            "label": "black check",
            "args": [
                "scripts/black_check.py"
            ],
            "presentation": {
                "clear": true
            },
        },
        {
            "label": "black",
            "args": [
                "scripts/black.py"
            ],
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "mypy",
            "args": [
                "scripts/mypy.py"
            ],
            "presentation": {
                "clear": true
            },
        },
        {
            "label": "lint",
            "args": [
                "scripts/lint.py"
            ],
            "presentation": {
                "clear": true
            },
        },
        {
            "label": "pycodestyle",
            "args": [
                "scripts/pycodestyle.py"
            ],
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "pdoc3",
            "args": [
                "scripts/pdoc3.py"
            ],
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "pdoc3 server",
            "args": [
                "scripts/pdoc3_server.py"
            ],
            "presentation": {
                "clear": true
            },
        },
        {
            "label": "py coverage",
            "args": [
                "scripts/coverage.py"
            ],
        },
        {
            "label": "build",
            "args": [
                "scripts/build.py"
            ],
        },
        {
            "label": "save credential to keyring",
            "args": [
                "macrobond_financial/util/save_credential_to_keyring.py"
            ],
        },
        {
            "label": "code generation",
            "args": [
                "scripts/code_generation.py" , "--generate"
            ]
        }
    ]
}