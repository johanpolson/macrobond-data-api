{
    "version": "2.0.0",
    "type": "shell",
    "command": "${command:python.interpreterPath}",
    "problemMatcher": [],
    "tasks": [
        {
            "label": "Set up dev environment",
            "args": [
                "scripts/set_up_dev_environment.py"
            ],
            "detail": "Install all depends"
        },
        {
            "label": "Create venv",
            "command": "py",
            "args": [
                "-${input:py_version}",
                "-m",
                "venv",
                ".env"
            ],
            "detail": "Create a new python virtual environment"
        },
        {
            "label": "Pytest",
            "args": [
                "scripts/pytest_.py"
            ],
            "detail": "Run all tests correctly"
        },
        {
            "label": "Black",
            "args": [
                "scripts/black.py"
            ],
            "presentation": {
                "clear": true
            },
            "detail": "Format code"
        },
        {
            "label": "Lint",
            "args": [
                "scripts/lint_tools.py",
                "--${input:lint_tool}"
            ],
            "presentation": {
                "clear": true
            },
            "detail": "Run lint tools, black_check mypy pylint pycodestyle pdoc3"
        },
        {
            "label": "Pdoc3",
            "args": [
                "scripts/pdoc3.py"
            ],
            "presentation": {
                "clear": true
            },
            "detail": "generate documentation"
        },
        {
            "label": "Pdoc3 server",
            "args": [
                "scripts/pdoc3_server.py"
            ],
            "presentation": {
                "clear": true
            },
        },
        {
            "label": "py coverage",
            "args": [
                "scripts/coverage.py",
                "--${input:coverage_tool}"
            ],
        },
        {
            "label": "Build",
            "args": [
                "scripts/build.py"
            ],
            "detail": "lint and generate documentation then builds the the package"
        },
        {
            "label": "Save credential to keyring",
            "args": [
                "macrobond_financial/util/save_credential_to_keyring.py"
            ],
        },
        {
            "label": "Code generation",
            "args": [
                "scripts/code_generation.py",
                "--generate"
            ],
            "detail": "Generate code for the duplicated code in web and com"
        }
    ],
    "inputs": [
        {
            "id": "py_version",
            "type": "pickString",
            "options": [
                "3",
                "3.7"
            ],
            "description": "Which version of python ? 3 is recommended normal uses",
            "default": "3"
        },
        {
            "id": "lint_tool",
            "type": "pickString",
            "options": [
                "all",
                "verify",
                "black_check",
                "mypy",
                "pylint",
                "py_code_style",
                "pdoc3"
            ],
            "description": "Which tool ?",
            "default": "all"
        },
        {
            "id": "coverage_tool",
            "type": "pickString",
            "options": [
                "all",
                "web",
                "com",
                "comparison"
            ],
            "description": "Which tool ?",
            "default": "all"
        }
    ]
}