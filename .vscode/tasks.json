{
    "version": "2.0.0",
    "type": "shell",
    "command": "${command:python.interpreterPath}",
    "problemMatcher": [],
    "tasks": [
        {
            "label": "Set up dev environment",
            "args": [
                "scripts/set_up_dev_environment.py"
            ],
            "detail": "Install all depends"
        },
        {
            "label": "Create venv",
            "command": "py",
            "args": ["-${input:py_version}", "-m", "venv", ".env"],
            "detail": "Create a new python virtual environment"
        },
        {
            "label": "Pytest",
            "args": [
                "scripts/pytest_.py"
            ],
        },
        {
            "label": "PyLint",
            "args": [
                "scripts/pylint.py"
            ],
            "presentation": {
                "clear": true
            },
        },
        {
            "label": "Black check",
            "args": [
                "scripts/black_check.py"
            ],
            "presentation": {
                "clear": true
            },
            "detail": "Verify code formatting"
        },
        {
            "label": "Black",
            "args": [
                "scripts/black.py"
            ],
            "presentation": {
                "clear": true
            },
            "detail": "Format code"
        },
        {
            "label": "Mypy",
            "args": [
                "scripts/mypy.py"
            ],
            "presentation": {
                "clear": true
            },
        },
        {
            "label": "Lint",
            "args": [
                "scripts/lint.py"
            ],
            "presentation": {
                "clear": true
            },
            "detail": "Run all lint tools"
        },
        {
            "label": "PyCodeStyle",
            "args": [
                "scripts/pycodestyle.py"
            ],
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "Pdoc3",
            "args": [
                "scripts/pdoc3.py"
            ],
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "Pdoc3 server",
            "args": [
                "scripts/pdoc3_server.py"
            ],
            "presentation": {
                "clear": true
            },
        },
        {
            "label": "py coverage",
            "args": [
                "scripts/coverage.py"
            ],
        },
        {
            "label": "Build",
            "args": [
                "scripts/build.py"
            ],
        },
        {
            "label": "Save credential to keyring",
            "args": [
                "macrobond_financial/util/save_credential_to_keyring.py"
            ],
        },
        {
            "label": "Code generation",
            "args": [
                "scripts/code_generation.py" , "--generate"
            ]
        }
    ],
    "inputs": [
        {
            "id": "py_version",
            "type": "pickString",
            "options": ["3", "3.7"],
            "description": "Which version of python ? 3 is recommended normal uses",
            "default": "3"
        }
    ]
}